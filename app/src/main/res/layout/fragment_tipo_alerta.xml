<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipoAlerta">

    <!-- TODO: Update blank fragment layout -->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="@drawable/fondo"
       android:layout_marginTop="50dp"
       >

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginTop="30dp"
               >

               <ImageView
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:background="@drawable/img_logo_redondo"
                   android:layout_gravity="center_horizontal"
                   >

               </ImageView>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   >

                   <Button
                       android:id="@+id/btnLlamar"
                       android:layout_width="0dp"
                       android:layout_height="40dp"
                       android:layout_weight="1"
                       android:text="LLAMAR"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="5dp"
                       android:textColor="@android:color/white"
                       android:background="#F44336"
                       android:textStyle="bold"
                       >

                   </Button>

                   <Button
                       android:id="@+id/btnChat"
                       android:layout_width="0dp"
                       android:layout_height="40dp"
                       android:layout_weight="1"
                       android:text="CHAT"
                       android:layout_marginLeft="5dp"
                       android:layout_marginRight="10dp"
                       android:textColor="@android:color/white"
                       android:background="#F44336"
                       android:textStyle="bold"
                       >

                   </Button>


               </LinearLayout>

               <!-- BOTONES TIPOS DE ALERTA FILA 1 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >

                    <ImageButton
                        android:id="@+id/btnAlertaRobo"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/alerta_robo"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">

                    </ImageButton>

                    <ImageButton
                        android:id="@+id/btnAlertaVandalismo"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/alerta_vandalismo"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">
                    </ImageButton>

                    <ImageButton
                        android:id="@+id/btnAlertaAgresion"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/alerta_agresion"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp">
                    </ImageButton>

                </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   >

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="25dp"
                       android:layout_weight="1"
                       android:text="ROBO"
                       android:textSize="18dp"
                       android:textStyle="bold"
                       android:textColor="@android:color/black"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="5dp">
                   </TextView>

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="25dp"
                       android:layout_weight="1"
                       android:text="VANDALISMO"
                       android:textStyle="bold"
                       android:textColor="@android:color/black"
                       android:textSize="18dp"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="5dp">
                   </TextView>

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="25dp"
                       android:layout_weight="1"
                       android:textSize="18dp"
                       android:text="AGRESIÓN"
                       android:textStyle="bold"
                       android:textColor="@android:color/black"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="5dp">
                   </TextView>



               </LinearLayout>

               <!-- BOTONES TIPOS DE ALERTA FILA 2 -->

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   >

                   <ImageButton
                       android:id="@+id/btnAlertaAgresionSexual"
                       android:layout_width="0dp"
                       android:layout_height="100dp"
                       android:layout_weight="1"
                       android:background="@drawable/alerta_agresion_sexual"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="5dp">

                   </ImageButton>

                   <ImageButton
                       android:id="@+id/btnAlertaViolenciaGenero"
                       android:layout_width="0dp"
                       android:layout_height="100dp"
                       android:layout_weight="1"
                       android:background="@drawable/alerta_violencia_genero"
                       android:layout_marginLeft="5dp"
                       android:layout_marginRight="5dp">
                   </ImageButton>

                   <ImageButton
                       android:id="@+id/btnAlertaAcosoEscolar"
                       android:layout_width="0dp"
                       android:layout_height="100dp"
                       android:layout_weight="1"
                       android:background="@drawable/alerta_acoso_escolar"
                       android:layout_marginLeft="5dp"
                       android:layout_marginRight="10dp">
                   </ImageButton>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   >

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="45dp"
                       android:layout_weight="1"
                       android:text="AGRESIÓN SEXUAL"
                       android:textSize="18dp"
                       android:textStyle="bold"
                       android:textColor="@android:color/black"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="5dp">
                   </TextView>

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="45dp"
                       android:layout_weight="1"
                       android:text="VIOLENCIA DE GÉNERO"
                       android:textStyle="bold"
                       android:textColor="@android:color/black"
                       android:textSize="18dp"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="5dp">
                   </TextView>

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="45dp"
                       android:layout_weight="1"
                       android:textSize="18dp"
                       android:text="ACOSO ESCOLAR"
                       android:textStyle="bold"
                       android:textColor="@android:color/black"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="5dp">
                   </TextView>



               </LinearLayout>


           </LinearLayout>




       </ScrollView>

   </RelativeLayout>

</FrameLayout>