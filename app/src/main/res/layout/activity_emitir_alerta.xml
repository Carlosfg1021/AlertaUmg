<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Funcionalidad.EmitirAlerta">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/lblNombreAlerta"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="19dp"
                android:text="Vandalismo"
                android:textColor="#000000"
                android:textSize="30dp">

            </TextView>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="650dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="26dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">


            <ScrollView
                android:layout_width="364dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/boton_redondo_gris"
                        android:text="Descripcion"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <EditText
                        android:id="@+id/txtDescripcion"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/redondo"
                        android:hint="Descripcion"
                        android:maxLength="100"
                        android:maxLines="1" />


                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/boton_redondo_gris"
                        android:text="Latitud"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <EditText
                        android:id="@+id/txtLatitud"
                        android:layout_width="294dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/redondo"
                        android:enabled="false"
                        android:hint="Latitud" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="45dp">

                        <TextView
                            android:layout_width="190dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="22dp"
                            android:background="@drawable/boton_redondo_gris"
                            android:text="Longitud"
                            android:textColor="#000000"
                            android:textSize="25dp" />

                        <Button
                            android:id="@+id/btnUbicacion"
                            android:layout_width="86dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="223dp"
                            android:layout_marginLeft="223dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="55dp"
                            android:layout_marginRight="55dp"
                            android:background="@drawable/boton_redondo_celeste"
                            android:text="Ubicacion" />

                        <EditText
                            android:id="@+id/txtLongitud"
                            android:layout_width="286dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dp"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/redondo"
                            android:enabled="false"
                            android:hint="Longitud" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="80dp">

                        <Button
                            android:id="@+id/botonfoto"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="150dp"
                            android:layout_marginTop="90dp"
                            android:background="@drawable/ic_foto" />

                        <ImageView
                            android:id="@+id/imagenalerta"
                            android:layout_width="250dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="30dp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="279dp"
                        android:layout_height="92dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnCancelar"
                            android:layout_width="112dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/boton_redondo_celeste"
                            android:text="Cancelar"
                            android:textColor="#000000" />

                        <Button
                            android:id="@+id/btnConfirmar"
                            android:layout_width="104dp"
                            android:layout_height="36dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="152dp"
                            android:layout_marginLeft="152dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="23dp"
                            android:layout_marginRight="23dp"
                            android:background="@drawable/boton_redondo_celeste"
                            android:text="Confirmar"
                            android:textColor="#000000" />


                    </RelativeLayout>


                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</RelativeLayout>