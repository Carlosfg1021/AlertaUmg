<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Funcionalidad.EmitirAlerta">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/lblNombreAlerta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vandalismo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="100dp"
                android:textColor="#000000"
                android:textSize="30dp">

            </TextView>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="680dp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            >



            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="40dp"
                        android:text="Descripcion"
                        android:textSize="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="22dp"
                        android:background="@drawable/boton_redondo_gris"
                        android:textColor="#000000"
                        />

                    <EditText
                        android:id="@+id/txtDescripcion"
                        android:layout_width="320dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/redondo"
                        android:hint="Descripcion"
                        android:maxLines="1"
                        android:maxLength="100"
                        />


                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="40dp"
                        android:text="Latitud"
                        android:textSize="25dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="22dp"
                        android:background="@drawable/boton_redondo_gris"
                        android:textColor="#000000"
                        />

                    <EditText
                        android:id="@+id/txtLatitud"
                        android:layout_width="320dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/redondo"
                        android:hint="Latitud"
                        android:enabled="false"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="45dp"
                        >

                        <TextView
                            android:layout_width="190dp"
                            android:layout_height="40dp"
                            android:text="Longitud"
                            android:textSize="25dp"
                            android:layout_marginLeft="22dp"
                            android:background="@drawable/boton_redondo_gris"
                            android:textColor="#000000"
                            />

                        <Button
                            android:id="@+id/btnUbicacion"
                            android:layout_width="85dp"
                            android:layout_height="20dp"
                            android:text="Ubicacion"
                            android:layout_marginLeft="240dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/boton_redondo_celeste"
                            />

                        <EditText
                            android:id="@+id/txtLongitud"
                            android:layout_width="320dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="22dp"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/redondo"
                            android:hint="Longitud"
                            android:enabled="false"
                            />


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="80dp"
                        >

                        <Button
                            android:id="@+id/botonfoto"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/ic_foto"
                            android:layout_marginLeft="150dp"
                            android:layout_marginTop="90dp"
                            />

                        <ImageView
                            android:id="@+id/imagenalerta"
                            android:layout_width="250dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="30dp"
                           />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        >

                        <Button
                            android:id="@+id/btnCancelar"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/boton_redondo_celeste"
                           android:text="Cancelar"
                            android:textColor="#000000"
                            />

                        <Button
                            android:id="@+id/btnConfirmar"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="170dp"
                            android:background="@drawable/boton_redondo_celeste"
                            android:text="Confirmar"
                            android:textColor="#000000"
                            />


                    </RelativeLayout>



                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</RelativeLayout>